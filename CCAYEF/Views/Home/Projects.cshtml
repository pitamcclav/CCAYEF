@{
    ViewData["Title"] = "Projects";
}
<div class="breadcrumbs">
</div>
    <!--Project Section one-->
<section class="proj-one">
    <div class="container">
        <div class="section-header" data-aos="fade-up">
            <h3>Our Projects</h3>
            <p>Discover our ongoing and completed projects aimed at empowering children and youth</p>
        </div>
        <div class="row" data-aos="fade-up">
            <div class="col-lg-4">
                <div class="card">
                    <img src="~/images/causes-7.jpg" alt="Education Project" />
                    <div class="card-body">
                        <h4>Education for All</h4>
                        <p>This project focuses on providing scholarships, school supplies, and building educational infrastructure to ensure that every child has access to quality education.</p>
                        <a href="#" class="btn">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <img src="~/images/image_1.jpg" alt="Health Project" />
                    <div class="card-body">
                        <h4>Health and Wellness</h4>
                        <p>Our health project aims to improve the health and well-being of children and youth through medical camps, health education, and access to healthcare facilities.</p>
                        <a href="#" class="btn">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <img src="~/images/image_2.jpg" alt="Advocacy Project" />
                    <div class="card-body">
                        <h4>Advocacy and Rights</h4>
                        <p>This project is dedicated to advocating for the rights of children and youth, ensuring they are protected, respected, and given the opportunities to thrive.</p>
                        <a href="#" class="btn">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Projects Section 2 -->
<section class="proj-two">
    <div class="container">
        <div class="row" data-aos="fade-up">
            <div class="col-lg-6">
                <img src="~/images/image_4.jpg" alt="Community Development" />
            </div>
            <div class="col-lg-6">
                <div class="card-body">
                    <h4>Community Development</h4>
                    <p>This project involves building and improving community infrastructure, providing vocational training, and fostering community engagement to create a supportive environment for children and youth.</p>
                    <a href="#" class="btn">Get Involved</a>
                </div>
            </div>
        </div>
    </div>
    
</section>

<!-- Projects Section 3 -->
<section class="proj-three">
    <div class="container">
        <div class="row" data-aos="fade-up">
            <div class="col-lg-6">
                <div class="card-body">
                    <h4>Youth Empowerment</h4>
                    <p>
                        Our youth empowerment project focuses on equipping young people with the skills and
                        knowledge they need to become leaders and change-makers in their communities through
                        various training and mentorship programs.
                    </p>
                    <a href="#" class="btn">Join Us</a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="~/images/causes-8.jpg" alt="Youth Empowerment" />
            </div>
        </div>
    </div>
    
</section>

<!-- Projects Section 4 -->
<section class="proj-four">
    <div class="container">
        <div class="row" data-aos="fade-up">
            <div class="col-lg-6">
                <img src="~/images/image_3.jpg" alt="Environmental Sustainability" />
            </div>
            <div class="col-lg-6">
                <div class="card-body">
                    <h4>Environmental Sustainability</h4>
                    <p>This project aims to educate and involve children and youth in environmental conservation efforts, promoting sustainable practices and protecting natural resources for future generations.</p>
                    <a href="#" class="btn">Learn More</a>
                </div>
            </div>
        </div>
    </div>
    
</section>
